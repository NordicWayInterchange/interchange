<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.nordicway.interchange</groupId>
        <artifactId>interchange-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>routing-configurer</artifactId>

    <properties>
        <start-class>no.vegvesen.ixn.federation.RoutingConfigurerApplication</start-class>
    </properties>

    <dependencies>
        <dependency>
            <groupId>net.nordicway.interchange</groupId>
            <artifactId>neighbour-model</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.nordicway.interchange</groupId>
            <artifactId>ssl-utils</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
        </dependency>

        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>net.nordicway.interchange</groupId>
            <artifactId>debugclient</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>PKG</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>repackage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>IT</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <configuration>
                            <images>
                                <image>
                                    <alias>qpid</alias>
                                    <name>qpid</name>
                                    <build>
                                        <dockerFileDir>${project.basedir}/../qpid/</dockerFileDir>
                                    </build>
                                    <run>
                                        <ports>
                                            <port>62671:5671</port>
                                            <port>62672:5672</port>
                                            <port>62080:8080</port>
                                            <port>62443:443</port>
                                        </ports>
                                        <volumes>
                                            <bind>
                                                <volume>
                                                    ${project.basedir}/target/test-classes/qpid:/config
                                                </volume>
                                                <volume>
                                                    ${project.basedir}/src/test/resources/jks:/jks
                                                </volume>
                                            </bind>
                                        </volumes>
                                        <env>
                                            <CA_CERTIFICATE_FILE>/jks/localhost.crt</CA_CERTIFICATE_FILE>
                                            <SERVER_CERTIFICATE_FILE>/jks/localhost.crt</SERVER_CERTIFICATE_FILE>
                                            <SERVER_PRIVATE_KEY_FILE>/jks/localhost.key</SERVER_PRIVATE_KEY_FILE>
                                            <VHOST_FILE>/work/default/config/default.json</VHOST_FILE>
                                            <STATIC_VHOST_FILE>/config/localhost.json</STATIC_VHOST_FILE>
                                            <GROUPS_FILE>/work/default/config/groups</GROUPS_FILE>
                                            <STATIC_GROUPS_FILE>/config/groups</STATIC_GROUPS_FILE>
                                            <PASSWD_FILE>/config/passwd</PASSWD_FILE>
                                        </env>
                                        <wait>
                                            <healthy>true</healthy>
                                            <time>60000</time>
                                        </wait>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>build</goal>
                                    <goal>start</goal>
                                </goals>
                            </execution>
                            <!-- stop is handled in parent pom config -->
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>