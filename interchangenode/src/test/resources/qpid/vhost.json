{
  "type": "BDB",
  "name": "localhost",
  "modelVersion": "7.0",
  "exchanges": [
    {
      "name": "nwEx",
      "type": "headers",
      "durable": true,
      "durableBindings": [
        {
          "arguments": {
            "x-filter-jms-selector": "originatingCountry='NO'"
          },
          "bindingKey": "originatingCountry",
          "destination": "NO-out"
        },
        {
          "arguments": {
            "x-filter-jms-selector": "originatingCountry LIKE '%'"
          },
          "bindingKey": "originatingCountry",
          "destination": "test-out"
        },
        {
          "arguments": {
            "x-filter-jms-selector": "originatingCountry='NO' AND what='Obstruction'"
          },
          "bindingKey": "originatingCountry, what",
          "destination": "NO-Obstruction"
        },
        {
          "arguments": {
            "x-filter-jms-selector": "originatingCountry='SE'"
          },
          "bindingKey": "originatingCountry",
          "destination": "SE-out"
        }
      ]
    }
  ],
  "queues": [
    {
      "name": "onramp",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    },
    {
      "name": "test-out",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    },
    {
      "name": "dlqueue",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    },
    {
      "name": "NO-Obstruction",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    },
    {
      "name": "NO-out",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    },
    {
      "name": "SE-out",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    },
    {
      "name": "NO-private",
      "type": "standard",
      "durable": true,
      "holdOnPublishEnabled": false,
      "owner": null
    }
  ],
  "virtualhostaccesscontrolproviders": [
    {
      "name": "default",
      "type": "RuleBased",
      "defaultResult": "DENIED",
      "rules": [
        {
          "objectType": "ALL",
          "identity": "interchange",
          "operation": "ALL",
          "outcome": "ALLOW_LOG",
          "attributes": {}
        },
        {
          "objectType": "EXCHANGE",
          "identity": "messaging-users",
          "operation": "PUBLISH",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "ROUTING_KEY": "onramp",
            "NAME": ""
          }
        },
        {
          "objectType": "VIRTUALHOST",
          "identity": "messaging-users",
          "operation": "ACCESS",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "localhost"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "messaging-users",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "test-out"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "guest",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "NO-out"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "guest",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "SE-out"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "guest",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "dlqueue"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "guest",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "NO-Obstruction"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "king_harald",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "NO-out"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "interchange",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "onramp"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "king_gustaf",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "SE-out"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "guest",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "guest"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "king_harald",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "king_harald"
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "king_gustaf",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "king_gustaf"
          }
        },
        {
          "objectType": "EXCHANGE",
          "identity": "king_harald",
          "operation": "PUBLISH",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "ROUTING_KEY": "NO-private",
            "NAME": ""
          }
        },
        {
          "objectType": "QUEUE",
          "identity": "king_harald",
          "operation": "CONSUME",
          "outcome": "ALLOW_LOG",
          "attributes": {
            "NAME": "NO-private"
          }
        },
        {
          "objectType": "ALL",
          "identity": "ALL",
          "operation": "ALL",
          "outcome": "DENY_LOG",
          "attributes": {}
        }
      ]
    }
  ]
}
