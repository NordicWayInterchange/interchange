{
  "name": "${broker.name}",
  "modelVersion": "8.0",
  "authenticationproviders": [
    {
      "name": "clientCerts",
      "type": "External"
    },
    {
      "name": "passwordFile",
      "type": "PlainPasswordFile",
      "path": "${PASSWD_FILE}"
    },
    {
      "name": "plain",
      "type" : "Plain",
      "users": [{
        "name": "guest",
        "type": "managed",
        "password":"guest"
      }]

    }
  ],
  "brokerloggers" : [
    {
      "name" : "console",
      "type" : "Console",
      "lastUpdatedBy" : "admin",
      "brokerloginclusionrules" : [ {
        "name" : "rootInclude",
        "type" : "NameAndLevel",
        "durable" : true,
        "level" : "INFO"
      } ]
    }
  ],
  "keystores": [
    {
    "name" : "default",
    "type" : "FileKeyStore",
    "storeUrl" : "${KEY_STORE}",
    "password" : "${KEY_STORE_PASSWORD}"
    }
  ],
 "ports": [
    {
      "name": "AMQP",
      "type": "AMQP",
      "authenticationProvider": "passwordFile",
      "port": "5672",
      "protocols": ["AMQP_1_0"],
      "virtualhostaliases": [
        {
          "name": "defaultAlias",
          "type": "defaultAlias"
        },
        {
          "name": "hostnameAlias",
          "type": "hostnameAlias"
        },
        {
          "name": "nameAlias",
          "type": "nameAlias"
        }
      ]
    },
    {
      "name": "HTTP",
      "port": "8080",
      "authenticationProvider": "passwordFile",
      "protocols": ["HTTP"]
    },
   {
     "name": "HTTPS",
     "type" : "HTTP",
     "authenticationProvider" : "clientCerts",
     "bindingAddress" : "*",
     "port" : "443",
     "trustStores": ["default"],
     "keyStore": "default",
     "needClientAuth": true,
     "wantClientAuth": false,
      "transports": [
        "SSL",
        "TCP"
      ]
    }
  ],
  "truststores": [
    {
      "name": "default",
      "type": "FileTrustStore",
      "exposedAsMessageSource": false,
      "trustAnchorValidityEnforced": false,
      "storeUrl": "${TRUST_STORE}",
      "password": "${TRUST_STORE_PASSWORD}"
    }
  ],
  "virtualhostnodes": [
    {
      "name": "${VHOST_NAME}",
      "type": "JSON",
      "defaultVirtualHostNode": "true",
      "storePath":"${VHOST_FILE}"
    }
  ],
  "groupproviders" : [ {
    "name" : "default",
    "type" : "GroupFile",
    "path" : "${GROUPS_FILE}"
  }],
  "plugins" : [ {
    "type" : "MANAGEMENT-HTTP",
    "name" : "httpManagement"
  } ]

}
